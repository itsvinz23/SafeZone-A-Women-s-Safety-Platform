<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DAF7A6"
    tools:context=".SOSActivatedActivity">

    <!-- Header Section -->
    <TextView
        android:id="@+id/sosHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOS Activated"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Timer Card (Top) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/timerCard"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/sosHeading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_timer"
                app:tint="#C70039"/>

            <TextView
                android:id="@+id/timerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SOS activated: 00:05:30"
                android:textColor="#0b186d"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Alert Status Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/alertStatusCard"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/timerCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alert Status"
                android:textColor="#666666"
                android:textSize="14sp" />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">

                <TextView
                    android:id="@+id/alertStatusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alert sent to 3 emergency contacts"
                    android:textColor="#0b186d"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>
            </ScrollView>

            <TextView
                android:id="@+id/viewMoreContacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="139dp"
                android:layout_marginBottom="0dp"
                android:text="More"
                android:onClick="setViewMoreContacts"
                android:textColor="#FF4081"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Location Card with Map Fragment -->
    <androidx.cardview.widget.CardView
        android:id="@+id/locationCard"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/alertStatusCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Location"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"/>

            <!-- Map Fragment Container -->
            <FrameLayout
                android:id="@+id/mapContainer"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:clickable="true"
                android:layout_margin="8dp"
                android:background="#EEEEEE"/>

            <TextView
                android:id="@+id/viewMoreLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More"
                android:onClick="setViewMoreLocation"
                android:textColor="#FF4081"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Combined Next Alert + Remaining Count -->
    <androidx.cardview.widget.CardView
        android:id="@+id/nextAlertCard"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/locationCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next Alert"
                android:textColor="#666666"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/nextAlertText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next alert in: 3.00 minutes"
                android:textColor="#0b186d"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/alertCountRemain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remaining Alerts: 2"
                android:textColor="#0b186d"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Deactivate Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/deactivateButton"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:text="Deactivate SOS Mode"
        app:icon="@drawable/ic_mic"
        app:iconTint="@android:color/white"
        app:backgroundTint="#C70039"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/nextAlertCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Home Icon - Modernized -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/homeIcon"
        android:onClick="setHomeIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:src="@drawable/ic_home"
        app:backgroundTint="#0b186d"
        app:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="#C70039"
        app:tint="@android:color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>